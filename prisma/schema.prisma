generator client {
  provider = "prisma-client-js"
}

generator nestgraphql {
  provider = "node node_modules/prisma-nestjs-graphql"
  output   = "../src/generated/models"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StarshipClass {
  FIGHTER
  TRANSPORTER
  SPEEDER
}

model Starship {
  id               String        @id @default(uuid())
  name             String        @unique @default("")
  model            String        @unique @default("")
  length           Int           @default(0)
  cargoCapacity    Int           @default(0)
  maxSpeed         Int           @default(0)
  hyperdriveRating Float         @default(1.0)
  starshipClass    StarshipClass @default(FIGHTER)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @default(now())
  crewMembers      Int           @default(0)

  @@map("starships")
}

model Person {
  id   String @id @default(uuid())
  name String @unique
  mass Int

  @@map("people")
}
